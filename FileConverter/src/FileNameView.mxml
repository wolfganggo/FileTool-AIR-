<?xml version="1.0" encoding="utf-8"?>
<s:Window xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 windowComplete="OnWindowComplete()"
		 title="Edit File Name"
		 height="370" width="600"
		 backgroundColor="0xCCCCCC"
		 alwaysInFront="true"
		 >
	<fx:Declarations>
	</fx:Declarations>

	<fx:Script>
		<![CDATA[
			include "actionscript/FileNameView.as";
		]]>
	</fx:Script>

	<s:TextInput id="edittx"
				change="OnTextChanged(event)" 
				fontSize="12" top="10" left="20" width="560" height="20"/>
	<s:Label id="tx_1" text="1:" left="20" top="50" width="560"/>
	<s:Label id="tx_2" text="2:" left="20" top="75" width="560"/>
	<s:Label id="tx_3" text="3:" left="20" top="100" width="560"/>
	<s:Label id="tx_4" text="4:" left="20" top="125" width="560"/>
	<s:Label id="tx_5" text="5:" left="20" top="150" width="560"/>
	<s:Label id="tx_6" text="6:" left="20" top="175" width="560"/>
	<s:Label id="tx_7" text="7:" left="20" top="200" width="560"/>
	<s:Label id="tx_8" text="8:" left="20" top="225" width="560"/>
	<s:Label id="tx_9" text="9:" left="20" top="250" width="560"/>
	<s:Label id="tx_help" text="Cmd/Ctrl+C followed by number to save name, Cmd/Ctrl+[number] to use name from store" left="20" top="285" width="560"/>
	<s:Button id="bt_cancel" label="Cancel" right="110" bottom="10" width="60" buttonDown="OnCancel(event)"/>
	<s:Button id="bt_ok" label="OK" right="20" bottom="10" width="60" buttonDown="OnOK(event)"/>
</s:Window>
